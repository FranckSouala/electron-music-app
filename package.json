{
  "name": "low-music",
  "private": true,
  "version": "1.0.0",
  "description": "A modern, lightweight music player",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "NODE_ENV=development npx electron .",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "music-metadata": "^11.10.3",
    "pinia": "^3.0.4",
    "uuid": "^13.0.0",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.16",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.15",
    "vite": "^7.2.4"
  },
  "build": {
    "appId": "com.electron.music",
    "productName": "Music Player",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "CREDITS.md"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "AudioVideo",
      "icon": "build/icons/icon.png"
    }
  }
}